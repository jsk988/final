<% user_id = cookies["user_id"]%>
<% user = User.find_by("id"=>user_id)%>
<% skintype = SkinType.find_by("id"=>user.skintype_id)%>

<div class="row">
	<div class="col-xs-5">
		<div class="row">
			<div class="col-xs-4">
				<h3>My Profile </h3>
			</div>
			<div class="pull-right" style="font-size:medium">
				<%= link_to "Edit", "/profile/edit" %>
			</div>
		</div>
	</div>	
</div>

<div class="row">
	<div class="col-md-6">
		<div class="row">
			<div class="cols-md-2">
				Name: 
				Email: 
				Skintype: 
			</div>
			<div class="cols-md-4">
				<%= user["first_name"]%> <%= user["last_name"]%>
				<%= user["email"]%>
				<%= skintype["name"]%>
			</div>
		</div>
	</div>
</div>